#!/usr/bin/env ruby
NUMBER = /\d+/
if ARGV.first.to_i > 0
  # assume list of pids
  
  require "set"
  def running
    `ps aux`.split("\n").map{|line| line[NUMBER].to_i }
  end
  
  pids = ARGV.map{|a| a.to_i }.uniq
  
  puts "Waiting for #{pids.inspect} to finish."
  
  while pids.length > 0
    sleep 1
    list = Set.new(running())
    pids.each do |pid|
      if !list.include?(pid)
        system "growlnotify", "-m", "Process ##{pid} is finished", "remind"
        pids.delete(pid)
      end
    end
  end
else
  # assume command to be run
  system *ARGV
  status = $?
  system "growlnotify",
         "-m",
         "#{ARGV.first} #{status.success? ?
                            "finished successfully" :
                            "exited with errors"}",
         "remind"
  exit status.to_i
end